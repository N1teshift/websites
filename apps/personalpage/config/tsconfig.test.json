{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "outDir": "./build",
        "rootDir": "./src",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "jsx": "preserve",
        "allowJs": true,
        "noEmit": false,
        "isolatedModules": false,
        "incremental": true,
        "baseUrl": "src",
        "paths": {
            "@components/*": ["infrastructure/shared/components/*"],
            "@lib/*": ["infrastructure/shared/lib/*"],
            "@styles/*": ["styles/*"],
            "@utils/*": ["infrastructure/shared/utils/*"],
            "@features/*": ["features/*"],
            "@tests/*": ["features/tests/*"],
            "@mathObjectGenerator/*": ["features/modules/math/mathObjectGenerator/*"],
            "@exerciseGenerator/*": ["features/modules/math/exerciseGenerator/*"],
            "@services/*": ["services/*"],
            "@shared/*": ["infrastructure/shared/*"],
            "@ai/*": ["features/infrastructure/ai/*"],
            "@progressReport/*": ["features/modules/edtech/progressReport/*"]
        }
    },
    "include": [
        "src/features/tests/scripts/**/*.ts",
        "src/features/tests/utils/**/*.ts",
        "src/features/tests/testCases/**/*.ts",
        "src/features/tests/ui/**/*.tsx",
        "src/features/modules/math/**/*.ts",
        "src/features/modules/math/**/*.tsx",
        "src/scripts/**/*.ts",
        "src/styles/**/*.css",
        "src/types/**/*.ts",
        "src/types/**/*.d.ts"
    ],
    "exclude": ["node_modules"]
} 