{
  "name": "websites-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter './apps/*' dev",
    "build": "pnpm --filter './apps/*' build",
    "lint": "pnpm --filter './apps/*' lint",
    "type-check": "pnpm --filter './apps/*' type-check",
    "test": "pnpm --filter './apps/*' test",
    "clean": "pnpm --filter './apps/*' exec rm -rf .next node_modules && pnpm --filter './packages/*' exec rm -rf node_modules",
    "verify:builds": "powershell -ExecutionPolicy Bypass -File ./scripts/verify-builds.ps1"
  },
  "devDependencies": {
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}

